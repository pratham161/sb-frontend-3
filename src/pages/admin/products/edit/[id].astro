---
import AdminLayout from '../../../../layouts/AdminLayout.astro';

// Disable static generation for admin pages
export const prerender = false;

// Get product ID from URL params
const { id } = Astro.params;
---

<AdminLayout title={`Edit Product - ${id} - Symbiocroft Admin`}>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-4">
      <a href="/admin/products" class="text-gray-400 hover:text-white transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      </a>
      <div>
        <h1 class="text-3xl font-bold text-white">Edit Product</h1>
        <p class="text-gray-400">Update product information</p>
      </div>
    </div>
  </div>

  <form id="productForm" class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <h2 class="text-xl font-bold text-white mb-4">Basic Information</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Product Name *</label>
            <input
              type="text"
              name="name"
              value="Spirulina Powder"
              required
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Product ID *</label>
            <input
              type="text"
              name="id"
              value="spirulina-powder"
              required
              disabled
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-gray-500 cursor-not-allowed"
            />
            <p class="text-xs text-gray-500 mt-1">Product ID cannot be changed</p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Category *</label>
              <select
                name="category"
                required
                class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
              >
                <option value="Powder" selected>Powder</option>
                <option value="Khakhra">Khakhra</option>
                <option value="Jelly">Jelly</option>
                <option value="Cookies">Cookies</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Price (â‚¹) *</label>
              <input
                type="number"
                name="price"
                value="499"
                required
                min="0"
                step="1"
                class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Short Description *</label>
            <textarea
              name="desc"
              rows="3"
              required
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none resize-none"
            >Pure. Potent. Purposeful. Our Spirulina is cultivated in hygienic, controlled conditions using solar drying and raceway pond technology ensuring quality.</textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Long Description</label>
            <textarea
              name="longDesc"
              rows="5"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none resize-none"
            >Detailed description and usage instructions will appear here.</textarea>
          </div>
        </div>
      </div>

      <!-- Benefits -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <h2 class="text-xl font-bold text-white mb-4">Product Benefits</h2>
        
        <div id="benefitsContainer" class="space-y-3">
          <div class="flex gap-2">
            <input
              type="text"
              value="Rich in protein"
              class="benefit-input flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
            <button
              type="button"
              onclick="this.parentElement.remove()"
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
          <div class="flex gap-2">
            <input
              type="text"
              value="High in iron"
              class="benefit-input flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
            <button
              type="button"
              onclick="this.parentElement.remove()"
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
          <div class="flex gap-2">
            <input
              type="text"
              value="Natural antioxidant"
              class="benefit-input flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
            <button
              type="button"
              onclick="this.parentElement.remove()"
              class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <button
          type="button"
          id="addBenefitBtn"
          class="mt-4 px-4 py-2 bg-green-500/20 hover:bg-green-500/30 text-green-400 font-medium rounded-lg transition-all flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add Benefit
        </button>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Image Upload -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <h2 class="text-xl font-bold text-white mb-4">Product Image</h2>
        
        <input type="file" id="imageInput" name="image" accept="image/*" class="hidden" />
        <input type="hidden" id="imageDataInput" name="preview" />
        
        <div 
          id="dropZone"
          class="aspect-square bg-gray-900/50 border-2 border-dashed border-gray-600 rounded-lg flex items-center justify-center cursor-pointer hover:border-green-500/50 transition-all relative overflow-hidden group"
        >
          <div id="previewContainer" class="hidden absolute inset-0">
            <img id="imagePreview" src="" alt="Preview" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-3">
              <button type="button" id="changeImageBtn" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-medium transition-all">
                Change
              </button>
              <button type="button" id="removeImageBtn" class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-medium transition-all">
                Remove
              </button>
            </div>
          </div>
          <div id="uploadPrompt" class="text-center p-6">
            <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <p class="text-white font-semibold mb-2">Drop image here or click to upload</p>
            <p class="text-sm text-gray-400">PNG, JPG, GIF up to 10MB</p>
          </div>
        </div>
        <p id="fileName" class="text-sm text-gray-400 mt-2 text-center hidden"></p>
      </div>

      <!-- Inventory -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <h2 class="text-xl font-bold text-white mb-4">Inventory</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Stock Quantity</label>
            <input
              type="number"
              name="stock"
              value="150"
              min="0"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">SKU</label>
            <input
              type="text"
              name="sku"
              value="SP-001"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            />
          </div>
        </div>
      </div>

      <!-- Status -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <h2 class="text-xl font-bold text-white mb-4">Publishing</h2>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Status</label>
            <select
              name="status"
              class="w-full px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
            >
              <option value="published" selected>Published</option>
              <option value="draft">Draft</option>
              <option value="out-of-stock">Out of Stock</option>
            </select>
          </div>

          <label class="flex items-center gap-2">
            <input
              type="checkbox"
              name="featured"
              checked
              class="w-4 h-4 rounded border-gray-600 bg-gray-900/50 text-green-500 focus:ring-green-500/20"
            />
            <span class="text-sm text-gray-300">Featured Product</span>
          </label>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="bg-gray-800/50 backdrop-blur-sm border border-green-500/30 rounded-xl p-6">
        <div class="space-y-3">
          <button
            type="submit"
            class="w-full py-3 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-semibold rounded-lg transition-all duration-200 transform active:scale-95"
          >
            Update Product
          </button>
          <a
            href="/admin/products"
            class="block w-full py-3 bg-gray-700/50 hover:bg-gray-700/70 text-gray-300 font-semibold rounded-lg transition-all text-center"
          >
            Cancel
          </a>
          <button
            type="button"
            class="w-full py-3 bg-red-500/20 hover:bg-red-500/30 text-red-400 font-semibold rounded-lg transition-all"
          >
            Delete Product
          </button>
        </div>
      </div>
    </div>
  </form>
</AdminLayout>

<script>
  import { productService } from '../../../../services/productService';
  import { categoryService } from '../../../../services/categoryService';
  import { UPLOADS_URL } from '../../../../utils/api';
  
  // Image upload functionality
  const dropZone = document.getElementById('dropZone');
  const imageInput = document.getElementById('imageInput') as HTMLInputElement;
  const imageDataInput = document.getElementById('imageDataInput') as HTMLInputElement;
  const imagePreview = document.getElementById('imagePreview') as HTMLImageElement;
  const previewContainer = document.getElementById('previewContainer');
  const uploadPrompt = document.getElementById('uploadPrompt');
  const fileName = document.getElementById('fileName');
  const changeImageBtn = document.getElementById('changeImageBtn');
  const removeImageBtn = document.getElementById('removeImageBtn');
  
  let selectedFile: File | null = null;
  let currentProductId: number | null = null;

  // Load categories
  async function loadCategories() {
    try {
      const response = await categoryService.getAllCategories();
      if (response.success && response.data) {
        const categorySelect = document.querySelector('select[name="category"]') as HTMLSelectElement;
        if (categorySelect) {
          categorySelect.innerHTML = '<option value="">Select Category</option>' +
            response.data.map(cat => `<option value="${cat.id}">${cat.name}</option>`).join('');
        }
      }
    } catch (error) {
      console.error('Error loading categories:', error);
    }
  }

  // Load existing product data
  async function loadProduct() {
    const pathParts = window.location.pathname.split('/');
    const productId = pathParts[pathParts.length - 1];
    currentProductId = Number(productId);

    if (!productId || isNaN(currentProductId)) {
      alert('Invalid product ID');
      window.location.href = '/admin/products';
      return;
    }

    try {
      const response = await productService.getProductById(currentProductId);
      
      if (response.success && response.data) {
        const product = response.data;
        
        // Populate form fields
        (document.querySelector('input[name="name"]') as HTMLInputElement).value = product.name || '';
        (document.querySelector('input[name="id"]') as HTMLInputElement).value = product.product_id || '';
        (document.querySelector('select[name="category"]') as HTMLSelectElement).value = String(product.category_id || '');
        (document.querySelector('input[name="price"]') as HTMLInputElement).value = String(product.price || '');
        (document.querySelector('textarea[name="desc"]') as HTMLTextAreaElement).value = product.short_description || '';
        (document.querySelector('textarea[name="longDesc"]') as HTMLTextAreaElement).value = product.long_description || '';
        (document.querySelector('input[name="stock"]') as HTMLInputElement).value = String(product.stock_quantity || '0');
        (document.querySelector('select[name="status"]') as HTMLSelectElement).value = product.status || 'published';
        (document.querySelector('input[name="featured"]') as HTMLInputElement).checked = product.is_featured || false;
        
        // Load benefits
        if (product.benefits && product.benefits.length > 0) {
          const benefitsContainer = document.getElementById('benefitsContainer');
          if (benefitsContainer) {
            benefitsContainer.innerHTML = product.benefits.map((benefit: string) => `
              <div class="flex gap-2">
                <input
                  type="text"
                  value="${benefit}"
                  class="benefit-input flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
                />
                <button
                  type="button"
                  onclick="this.parentElement.remove()"
                  class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </div>
            `).join('');
          }
        }
        
        // Load existing image if available
        if (product.image_path) {
          const imageUrl = `${UPLOADS_URL}/${product.image_path}`;
          imagePreview.src = imageUrl;
          previewContainer?.classList.remove('hidden');
          uploadPrompt?.classList.add('hidden');
        }
      }
    } catch (error) {
      console.error('Error loading product:', error);
      alert('Failed to load product');
    }
  }

  // Click to upload
  dropZone?.addEventListener('click', (e) => {
    if (!(e.target as HTMLElement).closest('button')) {
      imageInput?.click();
    }
  });

  // File input change
  imageInput?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file) {
      handleFile(file);
    }
  });

  // Drag and drop
  dropZone?.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-green-500', 'bg-green-500/5');
  });

  dropZone?.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-green-500', 'bg-green-500/5');
  });

  dropZone?.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-green-500', 'bg-green-500/5');
    
    const file = e.dataTransfer?.files[0];
    if (file && file.type.startsWith('image/')) {
      handleFile(file);
    } else {
      alert('Please drop an image file');
    }
  });

  // Handle file selection
  function handleFile(file: File) {
    if (file.size > 10 * 1024 * 1024) {
      alert('File size must be less than 10MB');
      return;
    }

    selectedFile = file;
    const reader = new FileReader();
    
    reader.onload = (e) => {
      const result = e.target?.result as string;
      imagePreview.src = result;
      imageDataInput.value = result;
      previewContainer?.classList.remove('hidden');
      uploadPrompt?.classList.add('hidden');
      if (fileName) {
        fileName.textContent = file.name;
        fileName.classList.remove('hidden');
      }
    };
    
    reader.readAsDataURL(file);
  }

  // Change image
  changeImageBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    imageInput?.click();
  });

  // Remove image
  removeImageBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    selectedFile = null;
    imagePreview.src = '';
    imageDataInput.value = '';
    if (imageInput) imageInput.value = '';
    previewContainer?.classList.add('hidden');
    uploadPrompt?.classList.remove('hidden');
    fileName?.classList.add('hidden');
  });

  // Add benefit functionality
  const addBenefitBtn = document.getElementById('addBenefitBtn');
  const benefitsContainer = document.getElementById('benefitsContainer');

  if (addBenefitBtn && benefitsContainer) {
    addBenefitBtn.addEventListener('click', () => {
      const benefitDiv = document.createElement('div');
      benefitDiv.className = 'flex gap-2';
      benefitDiv.innerHTML = `
        <input
          type="text"
          placeholder="e.g., Rich in protein"
          class="benefit-input flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-500 focus:border-green-500 focus:ring-2 focus:ring-green-500/20 focus:outline-none"
        />
        <button
          type="button"
          onclick="this.parentElement.remove()"
          class="px-4 py-2 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg transition-all"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </button>
      `;
      benefitsContainer.appendChild(benefitDiv);
    });
  }

  // Form submission
  const productForm = document.getElementById('productForm');
  if (productForm) {
    productForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (!currentProductId) {
        alert('Product ID not found');
        return;
      }

      const submitBtn = productForm.querySelector('button[type="submit"]') as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Updating Product...';
      }

      try {
        const formData = new FormData(productForm as HTMLFormElement);
        const benefits = Array.from(document.querySelectorAll('.benefit-input') as NodeListOf<HTMLInputElement>)
          .map(input => input.value)
          .filter(value => value.trim() !== '');

        // Update product data
        const productData = {
          name: formData.get('name') as string,
          category_id: Number(formData.get('category')),
          price: Number(formData.get('price')),
          short_description: formData.get('desc') as string,
          long_description: formData.get('longDesc') as string,
          stock_quantity: Number(formData.get('stock')) || 0,
          status: formData.get('status') as string,
          is_featured: formData.get('featured') === 'on',
          benefits: benefits
        };

        console.log('Updating product data:', productData);
        
        const response = await fetch(`https://api.symbicroftbiotech.com/api/products/${currentProductId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${localStorage.getItem('authToken')}`
          },
          body: JSON.stringify(productData)
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.message || 'Failed to update product');
        }

        const result = await response.json();
        console.log('Product updated:', result);

        // Upload new image if selected
        if (selectedFile) {
          const imageFormData = new FormData();
          imageFormData.append('image', selectedFile);

          const uploadResponse = await fetch(`https://api.symbicroftbiotech.com/api/products/${currentProductId}/image`, {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${localStorage.getItem('authToken')}`
            },
            body: imageFormData
          });

          if (!uploadResponse.ok) {
            console.error('Failed to upload image, but product was updated');
          } else {
            console.log('Image uploaded successfully');
          }
        }
        
        alert('Product updated successfully!');
        window.location.href = '/admin/products';
      } catch (error) {
        console.error('Error updating product:', error);
        alert(`Error: ${error instanceof Error ? error.message : 'Failed to update product'}`);
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Update Product';
        }
      }
    });
  }

  // Initialize on page load
  loadCategories();
  loadProduct();
</script>
