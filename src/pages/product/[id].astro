---
import NavBar from '../../components/NavBar.astro';
import Footer from '../../components/Footer.astro';
import Layout from '../../layouts/Layout.astro';
import Cart from '../../components/Cart.astro';
import { productService } from '../../services/productService';
import type { Product } from '../../services/productService';

export const prerender = false;

const productId = Astro.params.id;
const UPLOADS_URL = import.meta.env.PUBLIC_UPLOADS_URL || 'http://localhost:5000/uploads';

let product: Product | null = null;
let relatedProducts: Product[] = [];

try {
  const response = await productService.getProductById(productId!);
  if (response.success && response.data) {
    product = response.data;
    
    // Fetch related products from the same category
    if (product.category_id) {
      try {
        const relatedResponse = await productService.getProductsByCategory(product.category_id);
        if (relatedResponse.success && relatedResponse.data) {
          // Filter out current product and limit to 4 related items
          relatedProducts = relatedResponse.data
            .filter((p: Product) => p.id !== product!.id && p.status === 'published')
            .slice(0, 4);
        }
      } catch (error) {
        console.error('Error fetching related products:', error);
      }
    }
  }
} catch (error) {
  console.error('Error fetching product:', error);
}

if (!product) {
  return Astro.redirect('/404');
}

// Remove leading /uploads/ from image_path if present
const imagePath = product?.image_path?.replace(/^\/uploads\//, '') || '';
const imageUrl = imagePath ? `${UPLOADS_URL}/${imagePath}` : '/productimages/spirulinapowder.png';
---

<Layout>
  <NavBar />

  <main class="bg-linear-to-b from-gray-900 to-black text-white py-12 px-6">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Left: Images -->
      <div class="lg:col-span-5 bg-gray-800/30 rounded-lg p-6">
        <div class="w-full bg-black/20 rounded-lg p-4 flex items-center justify-center">
          <img id="productImage" src={imageUrl} alt={product.name} class="w-full h-96 object-contain rounded-lg" />
        </div>
        
        <!-- Product Variants/Related Products as Thumbnails -->
        {relatedProducts.length > 0 && (
          <div class="mt-4">
            <h4 class="text-sm text-gray-300 mb-2 font-semibold">Available Varieties:</h4>
            <div id="thumbnailRow" class="flex gap-3 overflow-x-auto pb-2">
              <!-- Current Product Thumbnail -->
              <div class="shrink-0">
                <div class="w-20 h-20 object-cover rounded border-2 border-yellow-400 cursor-pointer relative bg-gray-700/50 flex items-center justify-center overflow-hidden">
                  <img src={imageUrl} alt={product.name} class="w-full h-full object-cover" />
                  <div class="absolute inset-0 border-2 border-yellow-400 pointer-events-none"></div>
                </div>
                <p class="text-xs text-center mt-1 text-yellow-400 truncate w-20">Current</p>
              </div>
              
              <!-- Related Product Thumbnails -->
              {relatedProducts.map((relatedProduct) => {
                const relatedImagePath = relatedProduct.image_path?.replace(/^\/uploads\//, '') || '';
                const relatedImageUrl = relatedImagePath ? `${UPLOADS_URL}/${relatedImagePath}` : '/productimages/spirulinapowder.png';
                
                return (
                  <a href={`/product/${relatedProduct.id}`} class="shrink-0 group">
                    <div class="w-20 h-20 object-cover rounded border border-green-500/30 hover:border-green-400 cursor-pointer bg-gray-700/50 flex items-center justify-center overflow-hidden transition-all duration-200">
                      <img src={relatedImageUrl} alt={relatedProduct.name} class="w-full h-full object-cover" />
                    </div>
                    <p class="text-xs text-center mt-1 text-gray-300 group-hover:text-green-400 truncate w-20" title={relatedProduct.name}>{relatedProduct.name.substring(0, 12)}</p>
                  </a>
                );
              })}
            </div>
          </div>
        )}
      </div>

      <!-- Right: Info -->
      <div class="lg:col-span-7">
        <div class="bg-gray-800/30 backdrop-blur-sm border border-green-500/30 rounded-lg p-6">
          <div class="mb-4">
            <p id="productCategory" class="text-sm text-green-400 font-semibold">{product.category_name || 'Product'}</p>
            <h1 id="productTitle" class="text-3xl font-extrabold text-yellow-400 mt-1">{product.name}</h1>
            <div class="mt-2 flex items-center gap-4">
              <span id="productPrice" class="text-3xl font-bold text-yellow-400">₹{product.price}</span>
              <span class="text-sm text-gray-400">Inclusive of all taxes</span>
            </div>
          </div>

          <div class="mb-4">
            <h3 class="text-lg font-semibold text-white mb-2">Product details</h3>
            <p id="productDesc" class="text-sm text-gray-200">{product.short_description}</p>
          </div>

          {product.benefits && product.benefits.length > 0 && (
          <div class="mb-4">
            <h3 class="text-lg font-semibold text-white mb-2">Benefits</h3>
            <ul id="productBenefits" class="list-disc list-inside text-sm text-gray-200 space-y-1">
              {product.benefits.map((benefit: string) => (
                <li>{benefit}</li>
              ))}
            </ul>
          </div>
          )}

          <div class="mb-4 flex items-center gap-4">
            <label class="text-sm text-gray-300">Quantity</label>
            <div class="flex items-center gap-2 bg-gray-700/50 rounded px-2 py-1">
              <button id="qtyMinus" class="text-white px-2">−</button>
              <span id="qtyVal" class="w-8 text-center font-semibold">1</span>
              <button id="qtyPlus" class="text-white px-2">+</button>
            </div>
          </div>

          <div class="flex items-center gap-4 mt-6">
            <button id="addCartBtn" class="px-6 py-3 bg-linear-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-black font-bold rounded transition-all duration-200 active:scale-95">Add to Cart</button>
            <button id="buyNowBtn" class="px-6 py-3 border border-green-500/30 text-green-400 hover:bg-green-500/10 font-semibold rounded transition-all duration-200">Buy Now</button>
          </div>

          <div class="mt-6 border-t border-green-500/20 pt-4">
            <p class="text-sm text-gray-400">Share:</p>
            <div class="flex gap-2 mt-2">
              <button class="px-3 py-2 bg-gray-800/50 rounded border border-green-500/20">Facebook</button>
              <button class="px-3 py-2 bg-gray-800/50 rounded border border-green-500/20">Twitter</button>
              <button class="px-3 py-2 bg-gray-800/50 rounded border border-green-500/20">WhatsApp</button>
            </div>
          </div>
        </div>

        <!-- Additional details / description block -->
        <div class="mt-6 bg-gray-800/20 border border-green-500/20 rounded-lg p-6">
          <h3 class="text-xl font-bold text-red-500 mb-3">More about this product</h3>
          <p id="productLongDesc" class="text-sm text-gray-200">{product.long_description || product.short_description}</p>
        </div>
      </div>
    </div>
  </main>

  <Footer />
  <Cart />
</Layout>

<script is:inline define:vars={{ productData: product, uploadsUrl: UPLOADS_URL }}>
  // Cart utility functions
  const CART_KEY = 'symbicroft_cart';

  function getCartItems() {
    const cartData = localStorage.getItem(CART_KEY);
    return cartData ? JSON.parse(cartData) : [];
  }

  function addToCart(item) {
    const items = getCartItems();
    const existingIndex = items.findIndex(i => i.product_id === item.product_id);
    
    if (existingIndex > -1) {
      items[existingIndex].quantity += item.quantity;
    } else {
      items.push(item);
    }
    
    localStorage.setItem(CART_KEY, JSON.stringify(items));
    
    // Dispatch event for cart updates
    window.dispatchEvent(new CustomEvent('cartUpdated', {
      detail: { items, total: items.reduce((sum, i) => sum + (i.product_price * i.quantity), 0) }
    }));
  }

  function clearCart() {
    localStorage.removeItem(CART_KEY);
    window.dispatchEvent(new CustomEvent('cartUpdated', { detail: { items: [], total: 0 } }));
  }

  document.addEventListener('DOMContentLoaded', () => {
    const product = productData;
    const UPLOADS_URL = uploadsUrl;
    
    // Remove leading /uploads/ from image_path if present
    const imagePath = product.image_path ? product.image_path.replace(/^\/uploads\//, '') : '';
    const imageUrl = imagePath ? `${UPLOADS_URL}/${imagePath}` : '/productimages/spirulinapowder.png';

    // Handle quantity controls
    let quantity = 1;
    const qtyVal = document.getElementById('qtyVal');
    const qtyMinus = document.getElementById('qtyMinus');
    const qtyPlus = document.getElementById('qtyPlus');

    qtyMinus?.addEventListener('click', () => {
      if (quantity > 1) {
        quantity--;
        qtyVal.textContent = quantity.toString();
      }
    });

    qtyPlus?.addEventListener('click', () => {
      if (quantity < product.stock_quantity) {
        quantity++;
        qtyVal.textContent = quantity.toString();
      } else {
        alert('Maximum stock reached');
      }
    });

    // Add to cart
    document.getElementById('addCartBtn')?.addEventListener('click', () => {
      const cartItem = {
        product_id: product.id,
        product_name: product.name,
        product_price: product.price,
        quantity: quantity,
        image_path: imageUrl,
        stock_quantity: product.stock_quantity
      };

      addToCart(cartItem);
      alert(`Added ${quantity} x ${product.name} to cart!`);
      
      // Reset quantity
      quantity = 1;
      qtyVal.textContent = '1';
    });

    // Buy now
    document.getElementById('buyNowBtn')?.addEventListener('click', () => {
      const cartItem = {
        product_id: product.id,
        product_name: product.name,
        product_price: product.price,
        quantity: quantity,
        image_path: imageUrl,
        stock_quantity: product.stock_quantity
      };
      
      clearCart();
      addToCart(cartItem);
      window.location.href = '/Order';
    });
  });
</script>

<style>
  /* ensure the page follows the shared dark theme */
  #productImage { background: linear-gradient(180deg, rgba(0,0,0,0.2), rgba(0,0,0,0.2)); }
</style>