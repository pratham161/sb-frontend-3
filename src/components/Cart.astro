<!-- Floating Cart Button -->
<button 
	id="cartBtn"
	class="fixed bottom-8 right-8 z-40 w-16 h-16 rounded-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-black font-bold text-2xl shadow-lg hover:shadow-xl hover:shadow-green-500/50 transition-all duration-200 flex items-center justify-center active:scale-95"
	title="Open Shopping Cart"
>
	ðŸ›’
</button>

<!-- Cart Modal -->
<div 
	id="cartModal"
	class="fixed inset-0 z-50 hidden bg-black/60 backdrop-blur-sm transition-opacity duration-200"
>
	<!-- Cart Sidebar -->
	<div 
		id="cartSidebar"
		class="fixed right-0 top-0 h-screen w-1/4 bg-gradient-to-b from-gray-900 to-black border-l border-green-500/30 shadow-2xl transform transition-transform duration-300 translate-x-full flex flex-col"
	>
		<!-- Cart Header -->
		<div class="bg-gray-800/50 border-b border-green-500/30 px-6 py-6 flex items-center justify-between">
			<h2 class="text-2xl font-bold text-yellow-400">Shopping Cart</h2>
			<button 
				id="closeCartBtn"
				class="text-white hover:text-green-400 transition-colors"
				title="Close Cart"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>

		<!-- Cart Items -->
		<div id="cartItems" class="flex-1 overflow-y-auto px-6 py-6 space-y-4">
			<!-- Items will be populated here -->
			<div id="emptyCart" class="flex flex-col items-center justify-center h-full">
				<svg class="w-16 h-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
				</svg>
				<p class="text-gray-400 text-center">Your cart is empty</p>
				<p class="text-sm text-gray-500 text-center mt-2">Add items from our products section</p>
			</div>
		</div>

		<!-- Cart Footer -->
		<div class="border-t border-green-500/30 bg-gray-800/50 px-6 py-6 space-y-4">
			<!-- Total Price -->
			<div class="flex items-center justify-between pb-4 border-b border-green-500/20">
				<span class="text-white font-semibold">Subtotal:</span>
				<span id="cartTotal" class="text-2xl font-bold text-yellow-400">â‚¹0</span>
			</div>

			<!-- Checkout Button -->
             <a href="/Order">
			<button 
				class="w-full px-4 py-3 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-black font-bold rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl hover:shadow-green-500/30 active:scale-95"
			>
				Proceed to Checkout
			</button>
			</a>

			<!-- Continue Shopping -->
			<button 
				id="continueShopping"
				class="w-full px-4 py-3 border border-green-500/30 text-green-400 hover:border-green-400/60 hover:bg-green-500/10 font-semibold rounded-lg transition-all duration-200"
			>
				Continue Shopping
			</button>
		</div>
	</div>
</div>

<script>
	const CART_KEY = 'symbicroft_cart';
	
	const cartBtn = document.getElementById('cartBtn');
	const cartModal = document.getElementById('cartModal');
	const cartSidebar = document.getElementById('cartSidebar');
	const closeCartBtn = document.getElementById('closeCartBtn');
	const continueShopping = document.getElementById('continueShopping');
	const cartItemsContainer = document.getElementById('cartItems');
	const emptyCart = document.getElementById('emptyCart');
	const cartTotal = document.getElementById('cartTotal');

	// Get cart from localStorage
	function getCart() {
		return JSON.parse(localStorage.getItem(CART_KEY) || '[]');
	}

	// Save cart to localStorage
	function saveCart(cart) {
		localStorage.setItem(CART_KEY, JSON.stringify(cart));
		window.dispatchEvent(new CustomEvent('cartUpdated', {
			detail: { items: cart, total: cart.reduce((sum, i) => sum + (i.product_price * i.quantity), 0) }
		}));
	}

	// Open cart
	cartBtn?.addEventListener('click', () => {
		cartModal?.classList.remove('hidden');
		cartSidebar?.classList.remove('translate-x-full');
		document.body.style.overflow = 'hidden';
		renderCart();
	});

	// Close cart
	function closeCart() {
		cartModal?.classList.add('hidden');
		cartSidebar?.classList.add('translate-x-full');
		document.body.style.overflow = 'auto';
	}

	closeCartBtn?.addEventListener('click', closeCart);
	continueShopping?.addEventListener('click', closeCart);

	// Close on modal background click
	cartModal?.addEventListener('click', (e) => {
		if (e.target === cartModal) {
			closeCart();
		}
	});

	// Render cart items
	function renderCart() {
		const cart = getCart();
		
		if (cart.length === 0) {
			cartItemsContainer.innerHTML = `
				<div id="emptyCart" class="flex flex-col items-center justify-center h-full">
					<svg class="w-16 h-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
					</svg>
					<p class="text-gray-400 text-center">Your cart is empty</p>
					<p class="text-sm text-gray-500 text-center mt-2">Add items from our products section</p>
				</div>
			`;
		} else {
			cartItemsContainer.innerHTML = cart
				.map(
					(item, index) => `
				<div class="bg-gray-800/50 border border-green-500/30 rounded-lg p-4 hover:border-green-400/60 hover:bg-gray-800/70 transition-all duration-200">
					<div class="flex gap-3 mb-3">
						<img src="${item.image_path || '/productimages/default.png'}" alt="${item.product_name}" class="w-16 h-16 rounded object-cover" />
						<div class="flex-1">
							<h3 class="font-bold text-yellow-400 text-sm line-clamp-1">${item.product_name}</h3>
							<p class="text-green-400 font-semibold">â‚¹${item.product_price}</p>
						</div>
					</div>
					<div class="flex items-center justify-between gap-2">
						<div class="flex items-center gap-2 bg-gray-700/50 rounded px-2">
							<button class="text-white hover:text-green-400 py-1" onclick="updateQuantity(${index}, -1)">âˆ’</button>
							<span class="text-white font-semibold w-6 text-center">${item.quantity}</span>
							<button class="text-white hover:text-green-400 py-1" onclick="updateQuantity(${index}, 1)">+</button>
						</div>
						<button class="text-red-400 hover:text-red-300 transition-colors" onclick="removeItem(${index})">
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z"></path>
							</svg>
						</button>
					</div>
				</div>
			`
				)
				.join('');
		}

		// Update total
		const total = cart.reduce((sum, item) => sum + (item.product_price * item.quantity), 0);
		cartTotal.textContent = `â‚¹${total}`;
	}

	// Global functions for quantity and removal
	window.updateQuantity = (index, change) => {
		const cart = getCart();
		if (cart[index]) {
			cart[index].quantity += change;
			if (cart[index].quantity <= 0) {
				cart.splice(index, 1);
			}
			saveCart(cart);
			renderCart();
			updateCartBadge();
		}
	};

	window.removeItem = (index) => {
		const cart = getCart();
		cart.splice(index, 1);
		saveCart(cart);
		renderCart();
		updateCartBadge();
	};

	// Update cart button badge
	function updateCartBadge() {
		const cart = getCart();
		const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
		if (totalItems > 0) {
			let badge = document.getElementById('cartBadge');
			if (!badge) {
				badge = document.createElement('span');
				badge.id = 'cartBadge';
				badge.className =
					'absolute -top-2 -right-2 bg-red-500 text-white text-xs font-bold rounded-full w-6 h-6 flex items-center justify-center';
				cartBtn?.appendChild(badge);
			}
			badge.textContent = totalItems.toString();
		} else {
			const badge = document.getElementById('cartBadge');
			badge?.remove();
		}
	}

	// Listen for cart updates from other pages
	window.addEventListener('cartUpdated', () => {
		updateCartBadge();
		// If cart modal is open, refresh it
		if (!cartModal?.classList.contains('hidden')) {
			renderCart();
		}
	});

	// Initialize
	updateCartBadge();
</script>

<style>
	#cartModal.hidden {
		pointer-events: none;
	}

	#cartSidebar {
		width: 25vw;
		min-width: 350px;
	}

	@media (max-width: 1024px) {
		#cartSidebar {
			width: 35vw;
			min-width: 300px;
		}
	}

	@media (max-width: 640px) {
		#cartSidebar {
			width: 100%;
		}
	}
</style>